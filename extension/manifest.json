{
  "manifest_version": 3,
  "name": "BookmarkMakeOver",
  "version": "1.0.5",
  "description": "AI-powered bookmark organization. One credit per bookmark.",
  "permissions": ["bookmarks", "storage", "downloads", "tabs", "cookies"],
  "host_permissions": ["http://localhost/*", "https://phpstack-1510887-5948558.cloudwaysapps.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8000/extension*",
        "http://localhost:8000/wizard*",
        "https://phpstack-1510887-5948558.cloudwaysapps.com/extension*",
        "https://phpstack-1510887-5948558.cloudwaysapps.com/wizard*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
